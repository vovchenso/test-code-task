{
    "compileOnSave": true,
    "compilerOptions": {
        "pretty": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["*"]
        }
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": ["bin", "obj", "node_modules"]
}
